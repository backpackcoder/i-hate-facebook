{
  "manifest_version": 2,
  "name": "I Hate Facebook",
  "version": "1.0",

  "description": "Removes distracting elements from the Facebook page.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["main.js"]
    }
  ]

}